@page "{id:int}"
@model AssetTrackingSystem.Pages.AssetOverviewModel
@{
    ViewData["Title"] = "Asset Overview";
}
<!-- The rest of your HTML remains as previously set up -->
<div class="container my-4">
    <h1 class="mb-4">Asset Overview</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.AssetName</h5>
            <p class="card-text">
                <strong>Type:</strong> @Model.AssetType<br />
                <strong>Status:</strong> @Model.AssetStatus<br />
                <strong>Team:</strong> @Model.Team
            </p>
        </div>
    </div>
</div>

