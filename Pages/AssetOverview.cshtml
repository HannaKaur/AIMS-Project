@page
@model AssetTrackingSystem.Pages.AssetOverviewModel
@{
    ViewData["Title"] = "Asset Overview";
}

<!-- Optional: Include Bootstrap CSS for styling (you can remove or update if using custom CSS) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container my-4">
    <h1 class="mb-4">Asset Overview</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.AssetName</h5>
            <p class="card-text">
                <strong>Type:</strong> @Model.AssetType<br />
                <strong>Status:</strong> @Model.AssetStatus<br />
                <strong>Team:</strong> @Model.Team
            </p>
        </div>
    </div>
</div>

